{
  "name": "music-usenet-manager",
  "version": "1.0.0",
  "description": "A Windows desktop application for automating music discovery and downloading via Usenet",
  "main": "dist/main/main.js",
  "author": "Music Usenet Manager",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "tsc -p tsconfig.main.json && electron .",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win --x64",
    "package:win:dir": "npm run build && electron-builder --win --x64 --dir",
    "publish": "npm run build && electron-builder --win --x64 --publish always",
    "validate-build": "node scripts/build-installer.js",
    "build-installer": "node scripts/build-installer.js --build",
    "clean": "rimraf dist release"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "clsx": "^2.0.0",
    "electron-log": "^5.4.3",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2",
    "express": "^4.18.2",
    "lucide-react": "^0.294.0",
    "music-metadata": "^8.1.0",
    "node-cron": "^3.0.3",
    "sql.js": "^1.10.3",
    "tailwind-merge": "^2.1.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/electron-store": "^1.3.1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@types/sql.js": "^1.4.9",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.7",
    "vite-plugin-electron": "^0.28.0"
  }
}
